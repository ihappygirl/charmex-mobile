<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/corPreto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgLogoSplash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/imgLogo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_tela_splash" />

    <ProgressBar
        android:id="@+id/barraCarregamento"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="168dp"
        android:layout_marginTop="412dp"
        android:progress="@android:integer/config_mediumAnimTime"
        android:progressDrawable="@color/corRosa"
        android:progressTint="@color/corRosa"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@+id/imgLogoSplash"
        app:layout_constraintTop_toTopOf="@+id/imgLogoSplash" />

</android.support.constraint.ConstraintLayout>